import random

# --- DISK STRESS TEST (Approx 800KB) ---
# This ensures the file is heavy enough to test your 1440KB limit.
DATA_STRESS = "X" * 800000 

def start_game():
    hp = 100
    ammo = 10
    scrap = 0
    pos = [0, 0]
    enemies = ["Raider", "Mutant", "Robot"]

    print("\n" + "="*40)
    print("        --- THE WASTELAND ---")
    print("="*40)
    print("Commands: N, S, E, W, SEARCH, STATUS, QUIT")
    
    while hp > 0:
        cmd = input(f"\n[{pos[0]},{pos[1]}] WASTELAND> ").upper()
        
        if cmd == "QUIT": break
        elif cmd == "STATUS":
            print(f"HP: {hp} | AMMO: {ammo} | SCRAP: {scrap}")
            continue

        moved = False
        if cmd == "N": pos[1] += 1; moved = True
        elif cmd == "S": pos[1] -= 1; moved = True
        elif cmd == "E": pos[0] += 1; moved = True
        elif cmd == "W": pos[0] -= 1; moved = True
        
        if moved:
            print("Moving through ruins...")
            if random.random() > 0.7:
                enemy = random.choice(enemies)
                print(f"DANGER! A {enemy} attack!")
                if ammo > 0:
                    dmg = random.randint(10, 20)
                    hp -= dmg
                    ammo -= 1
                    scrap += 10
                    print(f"Target eliminated. -{dmg} HP, +10 Scrap.")
                else:
                    hp -= 40
                    print("NO AMMO! You got hurt badly! -40 HP.")
            else:
                print("The path is clear.")

    print(f"\nGame Over. Final Scrap: {scrap}")

# Directly calling the function for the RUN command
start_game()
