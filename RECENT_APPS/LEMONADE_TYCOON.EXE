# LEMONADE STAND TYCOON for CUSTOM_OS
# A simple text-based business simulation game.

import time
import random

print("--- LEMONADE STAND TYCOON ---")
print("Welcome to your new business venture!")
time.sleep(1)

money = 100
lemonade_price = 0.50
cups_per_day = 0
day = 1

def display_status():
    print(f"\n--- DAY {day} ---")
    print(f"Money: ${money:.2f}")
    print(f"Lemonade Price: ${lemonade_price:.2f}")
    print(f"Cups Sold Today: {cups_per_day}")

def end_day():
    global day, money, cups_per_day
    print("\n--- Day Summary ---")
    sales = random.randint(5, 20)  # Random sales each day
    
    # Adjust sales based on price
    if lemonade_price > 0.75:
        sales = int(sales * 0.5) # Fewer sales if price is high
    elif lemonade_price < 0.25:
        sales = int(sales * 1.5) # More sales if price is low
        
    profit = sales * lemonade_price
    money += profit
    cups_per_day = sales # Store actual sales
    print(f"Customers served: {sales}")
    print(f"Profit for the day: ${profit:.2f}")
    
    day += 1
    time.sleep(2)

while True:
    display_status()
    print("\nWhat do you want to do?")
    print("1. Change Lemonade Price")
    print("2. End Day")
    print("3. Quit Game")
    
    choice = input("Enter your choice (1-3): ")
    
    if choice == '1':
        try:
            new_price = float(input("Enter new price per cup ($0.10 - $1.00): "))
            if 0.10 <= new_price <= 1.00:
                lemonade_price = new_price
                print(f"Price updated to ${lemonade_price:.2f}")
            else:
                print("Invalid price. Keep it between $0.10 and $1.00.")
        except ValueError:
            print("Invalid input. Please enter a number.")
    elif choice == '2':
        end_day()
        if money <= 0:
            print("Oh no! You ran out of money. Game Over!")
            break
    elif choice == '3':
        print("Thanks for playing Lemonade Stand Tycoon! Your final money: ${money:.2f}")
        break
    else:
        print("Invalid choice. Please try again.")
